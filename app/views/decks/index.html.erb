<div class="row">
    <div class="large-12 columns">
		<h3>Deck Manager</h3>
		<%= render 'form' %>
		<table width="100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Tools</th>
				</tr>
			</thead>
			<% for deck in @decks %>
			<tr id="deck_<%= deck.id %>">
				<td>0</td>
				<td><%= deck.name %></td>
				<td>
					<%= link_to 'Edit', edit_deck_path(deck), class: "button tiny" %> 
					<%= link_to 'Delete', deck, class: "button tiny alert", method: :delete, data: { confirm: 'Are you sure you want to delete this deck?' }, remote: true %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>